{
  "compilerOptions": {
    "module": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true, // «———— enabling ESM for ts-node
  }, 
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "baseUrl": "src",
  "paths": {
    "*": ["node_modules/*"],
    "@controller/*": ["controllers/*"],
    "@router/*": ["routers/*"],
    "@provider/*": ["providers/*"]
  }
}